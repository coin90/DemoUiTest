<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DemoUITest.Views.ItemDetailPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="{Binding Title}"
    NavigationPage.HasNavigationBar="true"  
    BackgroundColor="{StaticResource Black}">
    <StackLayout
        Padding="15"
        Spacing="20">
        <Label
            FontSize="Medium"
            TextColor="White"
            Text="Text:" />
        <Label
            FontSize="Small"
            TextColor="White"
            Text="{Binding Item.Text}" />
        <Label
            FontSize="Medium"
            TextColor="White"
            Text="Description:" />
        <Label
            FontSize="Small"
            TextColor="White"
            Text="{Binding Item.Description}" />
    </StackLayout>
</ContentPage>